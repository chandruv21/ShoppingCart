<body>
	<nav class="fixed-top navbar navbar-light bg-light p-0" id='top' style="line-height:0">
		<ul class="navbar-nav">
			<li class="dropdown">
				<button class="dropbtn pl-2 top-button" style='color:white;background-color:#0056b3;border-radius:8%' onclick="myFunction()">Categories ▼ </button>
				<div id="myDropdown" class="dropdown-content">
					<a class="p-3 top-button" href="/products/"> All Products </a>
					<% categories.forEach(function(c){ %>
					<% if(c.title != 'Pooja-Items')  { %>
					<a class="p-3 top-button" href="/products/<%=c.slug %>"> <%= c.title %></a>
						<%	} %>

					<% subcategories.forEach(function(subc){ %>
						<% if(c.title == 'Pooja-Items' && subc.title == 'Agarbatti'   ) { %>
					<button class="dropbtn1 pl-3 top-button" style='background-color:#0056b3;color:white;border-radius:8%' onclick="myFunction1()"><%= c.title %> ▼</button>
				<div id="myDropdown1" class="dropdown-content1"> 
					<a class="p-3 top-button" href="/products/pooja-items">All Pooja-Items</a>
						<a class="p-3 sub-top-button" href="/products/sub/<%=subc.slug %>"><%= subc.title %></a>
						<a class="p-3 sub-top-button" href="/products/sub/karpura">Karpura</a>
						<a class="p-3 sub-top-button" href="/products/sub/sambrani">Sambrani</a>
						<a class="p-3 sub-top-button" href="/products/sub/cup-sambrani">CupSambrani</a>
						<a class="p-3 sub-top-button" href="/products/sub/arisina-kumkuma">Arisina-Kumkuma</a>
						<a class="p-3 sub-top-button" href="/products/sub/vilyadele-adike">Vilyadele-Adike</a>
						<a class="p-3 sub-top-button" href="/products/sub/deepa-oil">Deepa and Oil</a>
						<a class="p-3 sub-top-button" href="/products/sub/pooja-ghee">Pooja Ghee</a>
						<a class="p-3 sub-top-button" href="/products/sub/grandhige-items">Grandhige-Items</a>
						<a class="p-3 sub-top-button" href="/products/sub/marriage-items">Marriage-Items</a>
						<%	}  %>
					<%	}); %>
					<%	}); %>
				</div>
			</li>
			
		</ul>

		<% if(user) { %>
		<li class="dropdown2">
			<button class="dropbtn2 pl-3 top-button" onclick="myFunction2()"><%= user.name %>▾&emsp;</button>
