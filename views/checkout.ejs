		  <script src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js'></script>
	</head>
<body id=checkoutpagebody>
<nav class="fixed-bottom navbar navbar-expand  p-0">
		<div class="d-flex justify-content-around mr-auto">
			<div>
				<p class="p-0" >
					<a class="nav-link p-0 bottom-btn" href="http://mahadevamart.in">
						&nbsp;  <i style="color:#808080" class="fas fa-home"></i> <br>
					<small style="color:#808080" class="text-center p-0"> Home </small> </a>
				</p>
			</div>
			<div>
			   <p class="p-0">  
				<a class="nav-link p-0 bottom-btn shopping-cart" href="/cart/checkout">
					&emsp;<i style="color:#808080" class="fas fa-shopping-basket"></i> 
					<% if(typeof cart !== "undefined") { %>
					<span class="badge badge-danger">
						<%= cart.length %>
					</span><br>
					<% } else { %>
					<span><span> <br>
					<% } %> 
			&nbsp;	<small style="color:#808080" class="text-center;">My cart </small> </a>
		           </p>
			</div>
			<div>
			<p class="p-0">
				<a class="nav-link p-0 bottom-btn" href="/cart/azsearch">
				&nbsp; <i style="color:#808080" class="fas fa-search"></i> <br>
				<small style="color:#808080" class="text-center">  Search  </small> </a>
			</p>
			</div>
             </div>
</nav>

	<div class="container ">
		<%- messages('messages', locals) %>
		<% if(errors){ %>
			<% errors.forEach(function(error){ %>
			  <div class="alert alert-danger">
				<%= error.msg %>
			  </div>
		   <% }); %>
		  <% } %>
		
       </div>
		<div class="col-12 ">

<h2 class="py-1 m-0 text-center" style="font-weight:500;">My Cart</h2>
<br> 
<br> 
<br> 
<%if (typeof cart !== "undefined") { %>
<div class="row pl-2">
 <% var total = 0; %> 
    <% cartVar.forEach(function(product){  %>
    <% if(product.productCat == "pooja-items" || product.productCat == "combo") { %>
        <div class="col-12 col-md-6 p-0">
        <% var sub = parseFloat(product.qty * product.price).toFixed(2) %>
        <% total += +sub %>
        <img class='lazyload' src="<%= product.image %>" width="120" height="100" alt="mahadevamart" align="left">
           <div class="row d-flex justify-content-around">
               <div class="col-10 col-md-6">
		       <p class="text-center"> <b> <%= product.title %> </b> <br>  <%= product.qty %> ps <br> 
                    <span class="text-center">
                        <a class="h3" href="/cart/updatepi/<%= product.title %>?action=remove"><span
				      class="badge badge-light text-center ml-1 checkoutplusminus"> <i class="fas fa-minus fa-1x checkoutplusminus btn-outline-success"></i></span></a>&nbsp;
                         <span> <b> ₹ <%= sub %></b> </span>
                    <a  class="h3" href="/cart/updatepi/<%= product.title %>?action=add"><span
                        class="badge badge-light text-center mr-1 checkoutplusminus"> <i class="fas fa-plus fa-1x checkoutplusminus  btn-outline-success"></i>
			</span></a>&nbsp;
         <!--            <a href="/cart/update/<%= product.title %>?action=clear">Clear</a>&nbsp;  -->
                      </span>
</p>
    <hr class="p-0">
               </div>
       </div>
       </div>
    <% } else { %>
        <div class="col-12 col-md-6 p-0">
        <% var sub = parseFloat(product.qty * product.price).toFixed(2) %>
        <% total += +sub %>
        <img class='lazyload' src="<%= product.image %>" width="120" height="100" alt="mahadevamart" align="left">
           <div class="row d-flex justify-content-around">
               <div class="col-10 col-md-6">
                <p class="text-center"> <b> <%= product.title %> </b> <br> <%= product.kgNum %> <%= product.kgText%> <br>
                    <span class="text-center">
                        <a class="h3" href="/cart/update/<%= product.title %>?action=remove"><span
                            class="badge badge-light text-center ml-1 checkoutplusminus"><i class="fas fa-minus fa-1x checkoutplusminus  btn-outline-success"></i></span></a>&nbsp;
                         <span> <b> ₹ <%= sub %></b> </span>
                    <a  class="h3" href="/cart/update/<%= product.title %>?action=add"><span
                        class="badge badge-light text-center mr-1 checkoutplusminus"> <i class="fas fa-plus fa-1x checkoutplusminus btn-outline-success"></i>
			</span></a>&nbsp;
         <!--            <a href="/cart/update/<%= product.title %>?action=clear">Clear</a>&nbsp;  -->
                      </span>
</p>
    <hr class="p-0">
               </div>
       </div>
       </div>
       <% } %>
    <%  }); %>
</div>
    <h3 class="text-right pr-4"> Total: <b> ₹<%= parseFloat(total).toFixed() %> </b> </h3>
    <br>
    <div class="d-flex justify-content-around">
    <div>
    <a class="clearcart btn btn-danger" href="/cart/clear"> Clear Cart</a>
    </div>
    <div>
        <% if(loggedInVar) { %>
            <% if( total < 49) { %>
	    <p>  Minimum Order :- 49 ₹ </p>
	    <p> <b> Shop <%= 49 - total %>₹  More </p>
            <a class="btn btn-primary" href="/cart/min"> Proceed</a>
            <a class="fixed-check btn btn-primary" href="/cart/min"> Proceed</a>
            <% } else {%>
            <a class="btn btn-primary" href="/cart/buy"> Proceed</a>
            <a class="fixed-check btn btn-primary" href="/cart/buy"> Proceed</a>
            <% } %>
        <% } else { %>
        <a class="btn btn-primary" href="/users/login"> Proceed</a>
        <a class="fixed-check btn btn-primary" href="/users/login"> Proceed</a>
        <% } %>
    </div>
 </div>
<br>

    <% } else { %>
    <h3 class="text-center">No Items in Cart</h3>
<br>
<div class="d-flex justify-content-center">
 <div>
    <a href="/products" style="border-radius:15px" class="btn btn-success btn-lg btn-block h3" >Start Shopping </a>
</div>
</div>  
    <% } %>
</div> 

    <script>

        $(function () {
            $('a.clearcart').on('click', function () {
                if (!confirm('Do you really want to Clear the Cart!')) {
                    return false;
                }
            });

        })

    </script>

</div>
</div>
</div>
</div>
<br>
<br>
